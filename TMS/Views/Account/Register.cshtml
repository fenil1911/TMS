@model TMS.Model.RegisterModel

@{
    ViewBag.Title = "Register";

}

<h2 style="margin-top: 65px; margin-bottom: 30px; MARGIN-LEFT: 13px; font-family: 'Segoe UI Symbol'; font-weight: bold ">Register</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="col-md-5">
            <label class="form-label labelform">First Name<strong>*</strong></label>
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-5">
            <label class="form-label labelform">Last Name<strong>*</strong></label>
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-5">
            <label class="form-label labelform">User Name<strong>*</strong></label>

            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-5">
            <label class="form-label labelform">Password<strong>*</strong></label>

            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-5">
            <label class="form-label labelform">Confirm Password<strong>*</strong></label>

            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-5">
            <label class="form-label labelform">Email Id<strong>*</strong></label>

            @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-5">
            <label class="form-label labelform">Role</label>

            @Html.DropDownListFor(model => model.Role,
               new SelectList(Model.RoleDropdown, "Key", "Name", Model.Role), "ROLE", new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })


        </div>

        <div class="col-md-5">
            <label class="form-label labelform ">Is Active</label>


            <div class="checkbox" style="margin-top: -32px; margin-left: 96px; ">
                @Html.EditorFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-top: 25px; margin-left: 14px;">
                <input type="submit" value="Create" class="btn btn-primary" />
                <div>
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}