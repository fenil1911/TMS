@model TMS.Model.CommonLookupModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="white_box" style="margin-top: 80px;">
    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div>

                <h2 style="margin: 0px 5px; font-weight:bold; color:#fe6601">Create Common Lookup</h2>
            </div>
            <div class="validationMessage" style="background-color: #fff ">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">

                    <div class="col-md-6">
                        <label class="form-label labelform">Type<strong style="color:red " >*</strong></label>
                        @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label labelform">Code<strong style="color:red " >*</strong></label>
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label labelform">Name<strong style="color:red " >*</strong></label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label labelform">DisplayOrder</label>
                        @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label labelform ">Is Active</label>
                        <div class="checkbox" style=" margin-top: -4px; margin-left: 19px; ">
                            @Html.EditorFor(model => model.IsActive)
                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4" style="">
                            <label for="">&nbsp;&nbsp;</label>
                            <div class="input_box">
                                <button type="submit" class="btn btn-primary btn-md" id="#btnforms" style="margin-top: 0px;">Submit</button>
                                <a href="@Url.Action("Index", "CommonLookup")" class="btn btn-danger float-right right btn-md">Cancel</a>
                            </div>
                        </div>
                    </div>


                </div>
                }
            </div>
</div>
