<script>
    $(document).ready(function () {
        $('.dropdown').hover(
            function () {
                $(this).find('ul').css({
                    "display": "block",
                    "margin-top": 0
                });
            },
            function () {
                $(this).find('ul').css({
                    "display": "none",
                    "margin-top": 0
                });
            }
        );
        var message = $('#Messages').text();
        if (message != '') {
            toastr.success(message);
        }
        var emessage = $('#EMessages').text();
        if (emessage != '') {
            toastr.error(emessage);
        }
    });
</script>