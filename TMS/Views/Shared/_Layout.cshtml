<script>
        $(document).ready(function () {
            BindMenu();
        });
        var nowDate = new Date();
        var todayDate = new Date(nowDate.getFullYear(), nowDate.getMonth(), nowDate.getDate(), nowDate.getHours(), nowDate.getMinutes(), nowDate.getSeconds(), 0);

    function BindMenu() {
        var getRoleName = '@SessionHelper.RoleName'
            $.ajax({
                type: 'get',
                datatype: 'html',
                data: { rolename: getRoleName },
                async: true,
                url: '@Url.Action("GetFormByRole", "Menu")',
                success: function (data) {
                    $(".left_menu").html(data);
                    var menucode = $("#HDNMENUCODE").val();
                    var submenucode = $("#HDNSUBMENUCODE").val();
                    if (menucode != undefined) {
                        $("#" + menucode + "").addClass("active");
                        $("#" + menucode + "").find(".sub_menu").slideDown();
                        if (submenucode != undefined) {
                            $("#" + submenucode + "").addClass("active");
                        }
                    }
                }
            });
        }
</script>
